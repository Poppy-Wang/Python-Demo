package lesson1;

public class demo3 {
	public static void main(String[] args) {
		//运算符分类：算术运算符，关系运算符，逻辑运算符，赋值运算符，其他运算符
		int a=1;
		int b=2;
		int c=4;
		System.out.println(a+b);
		System.out.println(a-b);
		System.out.println(a*b);
		System.out.println(a/b);
		System.out.println(a%b);//取余数
		int aa=a++;
		int bb=++a;
		System.out.println(aa);
		System.out.println(bb);
		System.out.println((a>b)&(b>c));
		System.out.println((a>b)&&(b>c));
		System.out.println((a>b)|(b>c));
	}
}
